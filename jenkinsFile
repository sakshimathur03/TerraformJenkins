pipeline {
    agent any

    environment {
         AZURE_CREDENTIALS_ID = 'AZURE_CREDENTIALS'
        RESOURCE_GROUP = 'rg-jenkins'
        APP_SERVICE_NAME = 'MyAppTerraform'
    }

    stages {
        stage('Terraform Init & Apply') {
            steps {
                dir('Terraform') {
                    bat 'terraform init'
                    bat 'terraform plan -out=tfplan'
                    bat 'terraform apply -auto-approve tfplan'
                }
            }
        }

        stage('Publish .NET 8 Web API') {
            steps {
                dir('WebApplication3') {
                    bat 'dotnet publish -c Release -o out'
                }
            }
        }

        stage('Deploy to Azure App Service') {
            steps {
               withCredentials([azureServicePrincipal(credentialsId: AZURE_CREDENTIALS_ID)]) {
                bat 'az login --service-principal -u $CLIENT_ID -p $CLIENT_SECRET% --tenant $TENANT_ID'
                bat 'az account set --subscription $SUBSCRIPTION_ID'
                bat 'az webapp deploy --resource-group %RESOURCE_GROUP% --name %APP_SERVICE_NAME% --src-path WebApplication3\\out --type zip'
              }
            }
        }
    }
}
